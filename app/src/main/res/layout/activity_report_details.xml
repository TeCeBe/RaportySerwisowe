<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/reportTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reportContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reportDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reportTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Time"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reportPlaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Place"
        android:textSize="14sp" />
</LinearLayout>
